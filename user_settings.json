{
  "performance": {
    "max_workers": 8,
    "batch_size": 100,
    "min_files_for_batching": 50,
    "search_mode": "hybrid"
  },
  "context": {
    "sentences_before": 2,
    "sentences_after": 2,
    "max_merge_distance": 5
  },
  "cache": {
    "enabled": true,
    "max_size_mb": 500,
    "persistent": false,
    "auto_preextract_threshold": 100
  },
  "index": {
    "enabled": true,
    "auto_index": true,
    "index_path": "document_index.db",
    "rebuild_on_startup": false
  },
  "profile": "custom"
}